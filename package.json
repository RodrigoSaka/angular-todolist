{
  "name": "angular-todolist",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "start": "npm-run-all -p -r start:serve api",
    "start:serve": "ng serve --host 0.0.0.0 --port 8000 --disable-host-check",
    "api": "json-server ./api/db.json --delay 2000 --port 3001",
    "build": "ng build",
    "watch": "ng build --watch --configuration development",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "report": "jest --ci --reporters=default --reporters=jest-junit"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^17.3.0",
    "@angular/common": "^17.3.0",
    "@angular/compiler": "^17.3.0",
    "@angular/core": "^17.3.0",
    "@angular/forms": "^17.3.0",
    "@angular/platform-browser": "^17.3.0",
    "@angular/platform-browser-dynamic": "^17.3.0",
    "@angular/router": "^17.3.0",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0",
    "zone.js": "~0.14.3"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^17.3.2",
    "@angular/cli": "^17.3.2",
    "@angular/compiler-cli": "^17.3.0",
    "@types/jest": "^29.5.12",
    "jest": "^29.7.0",
    "jest-junit": "^16.0.0",
    "jest-preset-angular": "^14.0.3",
    "json-server": "^0.17.4",
    "npm-run-all": "^4.1.5",
    "ts-jest": "^29.1.2",
    "typescript": "~5.4.2"
  }
}